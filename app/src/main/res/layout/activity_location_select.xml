<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resetButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <fragment
     android:id="@+id/map"
     android:name="com.google.android.gms.maps.SupportMapFragment"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     map:layout_constraintBottom_toBottomOf="parent"
     map:layout_constraintEnd_toEndOf="parent"
     map:layout_constraintHorizontal_bias="0.0"
     map:layout_constraintStart_toStartOf="parent"
     map:layout_constraintTop_toTopOf="parent"
     map:layout_constraintVertical_bias="0.0"
     tools:context=".LocationSelectActivity" />

 <Button
     android:id="@+id/button5"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginEnd="54dp"
     android:layout_marginBottom="16dp"
     android:elevation="5dp"
     android:text="Confirm"
     android:onClick="confirmPosition"
     map:layout_constraintBottom_toBottomOf="parent"
     map:layout_constraintEnd_toEndOf="parent"
     map:layout_constraintTop_toTopOf="parent"
     map:layout_constraintVertical_bias="1.0" />

 <Button
     android:id="@+id/button4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginEnd="16dp"
     android:text="reset"
     android:onClick="resetPosition"
     map:layout_constraintBottom_toBottomOf="@+id/button5"
     map:layout_constraintEnd_toStartOf="@+id/button5"
     map:layout_constraintHorizontal_bias="1.0"
     map:layout_constraintStart_toStartOf="parent"
     map:layout_constraintTop_toTopOf="@+id/button5" />


</androidx.constraintlayout.widget.ConstraintLayout>




